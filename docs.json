{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Roulette API",
  "colors": {
    "primary": "#E7000B",
    "light": "#FF3D47",
    "dark": "#B8000A"
  },
  "favicon": "/favicon.svg",
  "api": {
    "baseUrl": "https://useroulette.com/api/v1",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    }
  },
  "openapi": "/openapi.json",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/companies",
              "concepts/pipeline",
              "concepts/sharing"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "/openapi.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://useroulette.com",
          "icon": "gauge"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@useroulette.com",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@useroulette.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://useroulette.com"
    }
  },
  "footer": {
    "socials": {
      "website": "https://useroulette.com",
      "linkedin": "https://linkedin.com/company/useroulette"
    }
  }
}
